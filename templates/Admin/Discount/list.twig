{% extends 'Admin/base.twig' %}

{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Discounts</h1>
        <a href="{{ path('admin_discount_create') }}" class="btn btn-sm btn-primary">Create discount</a>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Discount code</th>
            <th>Discount value</th>
            <th></th>
        </tr>
        </thead>
        {% for item in pagination %}
            <tr>
                <td>{{ item.code }}</td>
                <td>{{ item.amount }} {{ item.kind }}</td>
                <td>
                    <a href="{{ path('admin_discount_edit', {id: item.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                    <a href="{{ path('admin_discount_delete', {id: item.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
