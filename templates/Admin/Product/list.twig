{% extends 'Admin/base.twig' %}

{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3 border-bottom">
        <h1 class="h2">Products</h1>
        <a href="{{ path('admin_product_create') }}" class="btn btn-sm btn-primary">Create product</a>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Product name</th>
            <th>Product price</th>
            <th></th>
        </tr>
        </thead>
        {% for item in pagination %}
            <tr>
                <td>{{ item.name }}</td>
                <td>{{ item.price }} {{ item.currency }}</td>
                <td>
                    <a href="{{ path('admin_product_edit', {id: item.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                    <a href="{{ path('admin_product_delete', {id: item.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
